---
import '../styles/global.css';
const { title = 'Sito Astro' } = Astro.props ?? {};
---
<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-slate-800 text-white p-4">
      <div class="container mx-auto">
        <a href="/" class="text-xl font-bold">Sito Astro</a>
      </div>
    </header>
    <main class="container mx-auto p-4 flex-1">
      <slot />
    </main>
    <footer class="bg-slate-100 text-slate-700 p-4 mt-8">
      <div class="container mx-auto text-sm">© {new Date().getFullYear()} — Progetto</div>
    </footer>
  </body>
</html>
