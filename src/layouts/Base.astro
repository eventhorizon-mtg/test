---
import '../styles/global.css';
const { title = 'Sito Astro', description = 'Sito Astro di esempio' } = Astro.props ?? {};
const year = new Date().getFullYear();
---
<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url?.href} />
    <link rel="canonical" href={Astro.url?.href} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} type="image/svg+xml" />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-slate-800 text-white p-4">
      <div class="container mx-auto flex items-center gap-6">
        <a href={import.meta.env.BASE_URL} class="text-xl font-bold">Sito Astro</a>
        <nav class="text-sm opacity-90 flex gap-4">
          <a href={import.meta.env.BASE_URL} class="hover:underline">Home</a>
          <a href={`${import.meta.env.BASE_URL}posts/`} class="hover:underline">Blog</a>
          <a href={`${import.meta.env.BASE_URL}rss.xml`} class="hover:underline">RSS</a>
        </nav>
      </div>
    </header>
    <main class="container mx-auto p-4 flex-1">
      <slot />
    </main>
    <footer class="bg-slate-100 text-slate-700 p-4 mt-8">
      <div class="container mx-auto text-sm">&copy; {year} Â· Progetto</div>
    </footer>
  </body>
</html>
